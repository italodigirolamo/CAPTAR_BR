@model CAPTAR.DTO.UsuarioDto
@{
    Layout = null;
}

<section class="vh-100 bg-image">
         @* style="background-image: url('https://mdbcdn.b-cdn.net/img/Photos/new-templates/search-box/img4.webp');"> *@
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <div class="mask d-flex align-items-center h-100 gradient-custom-3 shadow-lg">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-7 col-xl-6 shadow-lg">
                    <div class="card" style="border-radius: 15px;">
                        <div class="card-body p-5">
                            
                            <img src="~/admin/img/logo6.png" width="80" />
                            <h2 class="text-uppercase text-center mb-2">Crear cuenta</h2>
                            <h4 class="text-center mb-1">Aplicacón de gestión captación Mobiliaria</h4>
                           

                            <form asp-controller="Acceso" asp-action="Registrarse" method="post"  > 

                                <div data-mdb-input-init class="form-outline mb-2">
                                    <label class="form-label" for="form3Example1cg">Nombre Completo</label>
                                    <input type="text" id="form3Example1cg" class="form-control form-control-lg" asp-for="NombreCompleto" />
                                </div>

                                <div data-mdb-input-init class="form-outline mb-2">
                                    <label class="form-label" for="form3Example3cg">Email</label>
                                    <input type="email" id="form3Example3cg" class="form-control form-control-lg" asp-for="Email" />
                                </div>

                                <div data-mdb-input-init class="form-outline mb-2">
                                    <label class="form-label" for="form3Example4cg">Password</label>
                                    <input type="password" id="form3Example4cg" class="form-control form-control-lg" asp-for="Password" />
                                </div>

                                <div data-mdb-input-init class="form-outline mb-2">
                                    <label class="form-label" for="form3Example4cdg">Confirmar password</label>
                                    <input type="password" id="form3Example4cdg" class="form-control form-control-lg" asp-for="ConfirmPass" />
                                </div>
                                <div class="form-check d-flex justify-content-center mb-5">
                                    <input class="form-check-input me-2" type="checkbox" value="" id="form2Example3cg" />
                                    <label class="form-check-label" for="form2Example3g">
                                        Acepto los  <a href="#!" class="text-body"><u>Términos de servicio</u></a>
                                    </label>
                                </div>

                                <div class="d-flex justify-content-center">
                                    <button type="submit" data-mdb-button-init
                                            data-mdb-ripple-init class="btn btn-primary btn-block btn-lg gradient-custom-4 text-white">
                                        Registrarse
                                    </button>
                                </div>

                                <p class="text-center text-muted mt-5 mb-0">
                                    Ya tienes una cuenta? <a asp-controller="Acceso" asp-action="Login"
                                                                 class="fw-bold text-body"><u>Iniciar Sesión</u></a>
                                </p>

                                @if (ViewData["Message"]!=null)
                                {
                                    <div class="alert alert-danger" role="alert">
                                        @ViewData["Message"]
                                    </div>
                                }


                            </form>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

</section>