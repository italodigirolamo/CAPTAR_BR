<div class="container">
    <div class="row  justify-content  align-items-center">
        <div class="col-md-2 w-auto">
            <h1 class="mb-2" >Crear </h1>
        </div>
        <div class="col-md-2 w-auto">
            <h3 class="mb-2">Solicitud</h3>
        </div>
        <div class="alert-success">
            @ViewBag.Message
        </div>
    </div>

