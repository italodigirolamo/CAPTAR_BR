    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.0/dist/umd/popper.min.js">
    </script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js">
    </script>

    <style>
        .icons .fa {
            width: 50px;
            height: 50px;
            font-size: 50px;
        }

        .tooltip-inner {
            background-color: green !important;
            color: #fff;
        }

        .bs-tooltip-bottom .arrow::before,
        .bs-tooltip-auto[x-placement^="bottom"] .arrow::before {
            border-bottom-color: green !important;
        }
    </style>

     <form  asp-action="Create">
        <div class="row g-2 align-items-center">
            @* <div class="col-auto"> *@

            <div class=" form-floating mb-2 col-auto ">
                <input asp-for="NombreCompleto"  id="NombreCompleto" class="form-control  " placeholder="Nombre Completo" />
                <label class="control-label" for="NombreCompleto">Nombre Completo</label>
                <a asp-validation-for="NombreCompleto" class="text-danger" style=font-size 1rem></a>
            </div>

            <div class=" form-floating mb-2 col-auto  ">
                    
                <input asp-for="Email" id="Email" class="form-control" type="email" placeholder="Email"
                data-toggle="tooltip" data-placement="top"   title="Ingresar un email válido " />
                <label asp-for="Email" class="control-label">
                    <a class="text-danger text-decoration-none">*</a> Email
                </label>
                <span asp-validation-for="Email" class="text-danger text-sm-center" style="font-size:10px;"></span>
            </div>

            <div class=" form-floating mb-2 col-auto  ">

                <input asp-for="Telefono" id="Telefono" class="form-control" type="tel" placeholder="Telefono" 
                       data-toggle="tooltip" data-placement="top" title="Ingresar un Telefono válido " />

                @* <label asp-for="Telefono" class="control-label"></label> *@
                <label asp-for="Telefono" class="control-label">
                    <a class="text-danger text-decoration-none">*</a> Teléfono
                </label>
                <span asp-validation-for="Telefono" class="text-danger"></span>
            </div>

            <div class=" form-floating mb-2 col-auto  ">
                <input asp-for="Contacto" class="form-control" type="text" placeholder="Contacto" />
                <label asp-for="Contacto" class="control-label"></label>
                <span asp-validation-for="Contacto" class="text-danger"></span>
            </div>

            <div class=" form-floating mb-2 col-auto ">
                  
                <input asp-for="Direccion" class="form-control" type="text" placeholder="Direccion" />  
                <label asp-for="Direccion" class="control-label"></label>
                <span asp-validation-for="Direccion" class="text-danger"></span>
            </div>

            <div class=" form-floating mb-2 col-auto ">

                <input asp-for="Numero" class="form-control" style=" width: 10rem;"
                       data-toggle="tooltip" data-placement="top" title="Número de casa o propiedad" />
                <label asp-for="Numero" class="control-label"></label>
                <span asp-validation-for="Numero" class="text-danger"></span>
                </div>

            <div class=" form-floating mb-2 col-auto ">

                <select class="form-control " style=" width: 4rem;" asp-for="Banos">
                    @* <select class="form-select " style=" width: 4rem;" asp-for="Banos"> *@
                    <option value="1" selected>1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="+5">+5</option>
                </select>
                <label asp-for="Banos" class="control-label"></label>
                <span asp-validation-for="Banos" class="text-danger"></span>
            </div>

            <div class=" form-floating mb-2 col-auto">
                  
                @* <input asp-for="Dormitorios" class="form-select " style=" width: 3rem;" /> *@
                <select class="form-select   " style=" width: 6rem;" asp-for="Dormitorios">
                    <option value="1" selected>1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="+5">+5</option>
                </select>
                <label asp-for="Dormitorios" class="control-label"></label>
                <span asp-validation-for="Dormitorios" class="text-danger"></span>
            </div>

             <div class=" form-floating mb-2 col-auto">
                  
                @* <input asp-for="Dormitorios" class="form-select " style=" width: 3rem;" /> *@
                <select class="form-select   " style=" width: 6rem;" asp-for="Estacionamiento">
                    <option value="1" selected>1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                    <option value="4">4</option>
                    <option value="+5">+5</option>
                </select>
                <label asp-for="Estacionamiento" class="control-label"></label>
                <span asp-validation-for="Estacionamiento" class="text-danger"></span>
            </div>

            <div class=" form-floating mb-2 col-auto">
                <select class="form-select "  onchange="" asp-for="Zona"
                    asp-items="new SelectList(ViewBag.Zonas, nameof(Zona.id), nameof(Zona.Nombre))">
                    <option value="">-Seleccione Zona-</option>
                </select>
                <label asp-for="Zona" class="control-label"></label>
            </div>

            <div class=" form-floating mb-2 col-auto " type="text" placeholder="Valor" >
                <input asp-for="Valor" class="form-control w-50" data-toggle="tooltip" data-placement="top"
                       data-theme="dark" title="Ingrese su valor estimado, de preferencia en moneda local" />
                <label asp-for="Valor" class="control-label"></label>
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
        </div>
        @* </div> *@

        <div class=" row  justify-content align-items-md-center">
            <div class=" col-md-2 w-auto">
                <input type="submit" value="Aceptar" class="btn btn-primary" />
            </div>
            <div class="col-md-2 w-auto">
                <a class="btn btn-light" asp-action="Index">Regresar</a>
            </div>
            <div class="row w-auto   align-items-md-center p-0 m-0 align-text-bottom">
                <p class="col-md-2 w-auto small">Los campos del formulario resaltados con el carácter </p>
                <p class="col-md-2 w-auto text-danger  ">*</p>
                <p class="col-md-2 w-auto small">, son requeridos! </p>

            </div>
        </div>

        @* <div class=" form-floating mb-2 col-auto"> *@
            @* <label asp-for="Fecha" class="control-label"></label> *@
            <input asp-for="Fecha" class="form-control" type="datetime" disabled hidden value="@DateTime.Today" />
            @* <span asp-validation-for="Fecha" class="text-danger"></span> *@
        @* </div> *@


    </form>
    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip({
                placement: 'bottom'
            });
        });
    </script>
        
        @if (ViewBag.Message != null)
    {
        <script type="text/javascript">
            window.onload = function () {
                alert("@ViewBag.Message");
            };
        </script>
    }
</div>

